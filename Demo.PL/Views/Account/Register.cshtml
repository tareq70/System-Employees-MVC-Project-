@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div asp-validation-summary="All" class="text-danger"></div>

<h1>Creative SignUp Form</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register" >
			<input class="text" type="text" asp-for="FName" placeholder="Your First Name" >
			<span asp-validation-for="FName" class="text-danger"></span>
			<br />
			<input class="text" asp-for="LName" type="text" placeholder="Your Last Name">
			<span asp-validation-for="LName" class="text-danger"></span>
			<br />

			<input class="text" asp-for="Email" type="email" placeholder="Email" >
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />

			<input class="text" asp-for="Password" type="password" placeholder="Password">
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />

			<input class="text" asp-for="ConfirmPassword" placeholder="Confirm Password">
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>

			<br />
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" type="checkbox" class="checkbox" >
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do You have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>
@section ValidationScriptSection{
	<partial name="_ValidationScriptsPartial" />
}
