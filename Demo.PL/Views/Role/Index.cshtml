@model IEnumerable< RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="Create" class="btn btn-success">Create New Role</a>
@if (Model.Count() > 0)
{

    <div class=" mt-5">
        <form class="row offset-2" asp-action="Index">
            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="Role's Name" />
            </div>

            <div class="col-4">
                <input type="submit" class="btn btn-info" value="Search" />

            </div>

        </form>
    </div>
    <table class="table table—striped table—hover mt—5">

        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U=>U.Id)</td>
                <td>@Html.DisplayNameFor(U=>U.RoleName)</td>
                <td>Detials</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>

        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>
                    <partial name="_ButtonsPartialView" model="@Role.Id">
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div>
        <h1>
            There is No Roles
        </h1>
    </div>
}
